<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bastian.findyousport.views.details.events.EventsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/eventsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="16dp"
        app:cardCornerRadius="8dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


        <RelativeLayout
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="44dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:id="@+id/classNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Clase" />

            <TextView
                android:padding="8dp"
                android:layout_below="@id/classNameTv"
                android:id="@+id/daysTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dias" />

            <TextView
                android:padding="8dp"
                android:layout_below="@id/classNameTv"
                android:layout_alignParentRight="true"
                android:text="Hora"
                android:id="@+id/scheduleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/signBtn"
                android:layout_below="@+id/scheduleTv"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Inscribirse"
                android:padding="4dp"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_corner_btn" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
