<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="16dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp"
    android:scrollbarThumbHorizontal="@color/colorPrimaryDark"
    android:scrollbarSize="2dp"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarFadeDuration="1200">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/mondayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lu" />

        <CheckBox
            android:id="@+id/tuesdayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma" />

        <CheckBox
            android:id="@+id/wednesdayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi" />

        <CheckBox
            android:id="@+id/thrusdayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ju" />

        <CheckBox
            android:id="@+id/fridayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vi" />

        <CheckBox
            android:id="@+id/saturdayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sa" />

        <CheckBox
            android:id="@+id/sundayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do" />

    </LinearLayout>

</HorizontalScrollView>
