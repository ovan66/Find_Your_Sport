<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:text="Nombre de la institucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverNameLocalTv"
        android:background="@drawable/bg_border_text"
        android:text="Nombre del local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"/>


    <TextView
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:text="Descripcion de la clase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverSportNameTv"
        android:padding="16dp"
        android:background="@drawable/bg_border_top_left_right"
        android:text="Nombre del deporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverPriceTv"
        android:background="@drawable/bg_border_left_right"
        android:padding="16dp"
        android:text="Precios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverSchedulesTv"
        android:background="@drawable/bg_border_left_right"
        android:padding="16dp"
        android:text="Horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverLocationTv"
        android:background="@drawable/bg_border_bottom_left_right"
        android:padding="16dp"
        android:text="Ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:text="Datos de contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverPhoneNumTv"
        android:background="@drawable/bg_border_top_left_right"
        android:padding="8dp"
        android:text="NÂ°telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverEmailTv"
        android:background="@drawable/bg_border_left_right"
        android:padding="8dp"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/reciverFacebookTv"
        android:background="@drawable/bg_border_bottom_left_right"
        android:padding="8dp"
        android:text="Facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>